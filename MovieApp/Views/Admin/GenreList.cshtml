@model AdminGenresViewModel

<h1>Admin Genre List</h1>
<div class="row">

        <div class="col-md-4">
        <form method="post" asp-action="GenreCreate" asp-controller="Admin">
            <h4>Tür Ekle</h4>
            <label asp-for="Name"></label>
            <input type="text" asp-for="Name" class="form-control" />
            <button type="submit" class="btn btn-primary mt-2">Ekle</button>
            <span asp-validation-for="Name" class="text-danger"></span>
    </form>
</div>

    <div class="col-md-8">
    <table class="table table-striped table-hover table-bordered">

        <thead>
            <tr>

                <th style="width:30px">#</th>
                <th>Name</th>
                <th style="width:70px">Count</th>
                <th style="width:160px">Action</th>
            </tr>
        </thead>
        <tbody>

            @foreach (var genre in Model.Genres)
            {
                <tr>
                    <td>@genre.GenreId</td>
                    <td>@genre.Name</td>
                    <td>@genre.Count</td>
                    <td>
                        <a href="/admin/genreupdate/@genre.GenreId" class="btn btn-warning btn-sm">Update</a>
                        <form action="/admin/genredelete/@genre.GenreId" method="post" style="display:inline">

                            <input type="hidden" name="genreId" value="@genre.GenreId" />

                            <button type="submit" class="btn btn-danger btn-sm">Delete</button>

                        </form>

                    </td>

                </tr>
            }

        </tbody>


    </table>
</div>



</div>