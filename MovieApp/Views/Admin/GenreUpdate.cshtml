@model AdminGenreEditViewModel

<h1>Edit Genre</h1>

<hr />

<form asp-controller="Admin" asp-action="GenreUpdate" method="post">

    <div class="row">

        <div class="col-md-3">
            <span class="text-danger" asp-validation-for="Name"></span>
            <div class="form-group">
                <input class="form-check-input" type="hidden" name="GenreId" value="@Model.GenreId" />
                <label asp-for="Name"></label>
                <input asp-for="Name" class="form-control" />


            </div>
            <button type="submit" class="btn btn-primary mt-3" style="width:100%">Submit</button>
        </div>

        <div class="col-md-9">

            <table class="table table-hover table-bordered">


                <thead>

                    <tr>
                        <th style="width:40px">Remove</th>
                        <th style="width:30px">#</th>
                        <th style="width:100px">Image</th>
                        <th>Title</th>
                        <th style="width:160px"></th>

                    </tr>

                </thead>

                <tbody>

                  


                        @for (int i = 0; i < Model.Movies.Count; i++)
                        {
                            <input type="hidden" name="Movies[@i].MovieId" value="@Model.Movies[i].MovieId" />
                            <input type="hidden" name="Movies[@i].Title" value="@Model.Movies[i].Title" />
                            <input type="hidden" name="Movies[@i].ImageUrl" value="@Model.Movies[i].ImageUrl" />
                        }
                    


                    @foreach (var movie in Model.Movies)
                    {


                        <tr>
                            <td><input type="checkbox" name="movieIds" value="@movie.MovieId" /></td>
                            <td>@movie.MovieId</td>
                            <td><img src="~/img/@movie.ImageUrl" width="80" /></td>
                            <td>@movie.Title</td>
                            <td>
                                <a class="btn btn-primary" href="/admin/movieupdate/@movie.MovieId">Düzenle</a>
                            </td>


                        </tr>

                    }


                </tbody>


            </table>

        </div>


    </div>


</form>