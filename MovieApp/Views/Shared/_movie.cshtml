@model Movie
   <div class="film">


    <div class="card-deck mt-3">
        <div class="card">
           
            <img class="card-img" src="~/img/@Model.ImageUrl" alt="@Model.Title" style="width:200px">
     

            <div class="card-body">
              
                <h5 class="card-title">@Model.Title</h5>
              
                <p class="card-text">

                    <a class="btn btn-primary" asp-controller="Movies" asp-action="Details" asp-route-id="@Model.MovieId">Detay</a>   

                </p>
               
            </div>    
    </div>
</div>
</div>